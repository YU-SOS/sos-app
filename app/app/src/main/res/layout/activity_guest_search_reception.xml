<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Reception ID 입력 -->
    <EditText
        android:id="@+id/reception_id_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Reception ID 입력"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- 조회 버튼 -->
    <Button
        android:id="@+id/search_reception_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="조회"
        app:layout_constraintTop_toBottomOf="@id/reception_id_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- 병원 정보 표시 -->
    <TextView
        android:id="@+id/hospital_info_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="병원 정보가 여기에 표시됩니다"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/search_reception_button"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <!-- 구급차 정보 표시 -->
    <TextView
        android:id="@+id/ambulance_info_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="구급차 정보가 여기에 표시됩니다"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/hospital_info_textview"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
