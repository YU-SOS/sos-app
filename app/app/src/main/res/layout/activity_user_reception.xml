<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 로그아웃 버튼 포함 -->
        <include
            android:id="@+id/logout_button_layout"
            layout="@layout/logout_button" />

        <!-- 툴바 설정 -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:title="Map/Reception"
            app:layout_constraintTop_toTopOf="parent" /> <!-- 툴바 위치를 상단에 고정 -->

        <!-- 접수 ID 입력란 -->
        <EditText
            android:id="@+id/reception_id_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="접수번호를 입력하세요"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="16dp" />

        <!-- 병원 조회 버튼 -->
        <Button
            android:id="@+id/get_hospital_info_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="접수 조회"
            app:layout_constraintTop_toBottomOf="@id/reception_id_input"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <!-- 병원 정보 텍스트뷰들 -->
        <TextView
            android:id="@+id/hospital_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hospital Name:"
            app:layout_constraintTop_toBottomOf="@id/get_hospital_info_button"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="16dp" />

        <TextView
            android:id="@+id/hospital_location_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hospital Location:"
            app:layout_constraintTop_toBottomOf="@id/hospital_name_textview"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="16dp" />

        <TextView
            android:id="@+id/hospital_phone_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hospital Phone:"
            app:layout_constraintTop_toBottomOf="@id/hospital_location_textview"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="16dp" />

        <TextView
            android:id="@+id/hospital_comment_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comment:"
            app:layout_constraintTop_toBottomOf="@id/hospital_phone_textview"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="16dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 네비게이션 바 설정 -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/navigation_menu" />
</androidx.drawerlayout.widget.DrawerLayout>
