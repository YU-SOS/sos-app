<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/ambulance_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/image2"
        android:contentDescription="Ambulance Image" />

    <TextView
        android:id="@+id/ambulance_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름 들어갈 칸"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ambulance_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="주소 들어갈 칸"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/ambulance_telephone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="전화번호 들어갈 칸"
        android:textSize="18sp" />

    <!-- 선탑구급대원 텍스트 -->
    <TextView
        android:id="@+id/paramedic_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="선탑 구급대원"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- 구급대원 Spinner -->
    <Spinner
        android:id="@+id/spinner_paramedics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btn_load_paramedic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="구급대원 정보 조회" />

</LinearLayout>
