<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Toolbar 포함 -->
    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white" />

    <!-- 구급차 이미지 -->
    <ImageView
        android:id="@+id/ambulance_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:src="@drawable/image2"
        android:contentDescription="Ambulance Image"
        android:background="@android:color/white" />

    <!-- 구급차 이름 -->
    <TextView
        android:id="@+id/ambulance_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="구급차 이름"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:background="@android:color/white" />

    <!-- 구급대원 추가 버튼 -->
    <Button
        android:id="@+id/add_paramedic_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="구급대원 추가"
        android:layout_gravity="center"
        android:backgroundTint="@android:color/white"
        android:textColor="@android:color/black"
        android:layout_marginBottom="16dp" />

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_paramedics"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="16dp"
        android:background="@android:color/white" />

    <!-- 구분선 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/white"
        android:layout_marginBottom="16dp" />

    <!-- 버튼 섹션 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@android:color/white">

        <!-- 첫 번째 버튼 섹션 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@android:color/white">

            <ImageButton
                android:id="@+id/btn_image_1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/patient"
                android:contentDescription="Image Button 1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/text_image_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="접수 요청"
                android:textSize="14dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:background="@android:color/white" />
        </LinearLayout>

        <!-- 두 번째 버튼 섹션 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@android:color/white">

            <ImageButton
                android:id="@+id/btn_image_2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/image2"
                android:contentDescription="Image Button 2"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/text_image_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="마이 페이지"
                android:textSize="14dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:background="@android:color/white" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
