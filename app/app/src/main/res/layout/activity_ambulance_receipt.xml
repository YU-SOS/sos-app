<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 병원 이름을 표시할 텍스트 뷰 -->
    <TextView
        android:id="@+id/hospitalNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="병원 이름"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- 환자 정보 입력 -->
    <EditText
        android:id="@+id/patientNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="환자 이름" />

    <EditText
        android:id="@+id/patientAgeEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="환자 나이"
        android:inputType="number" />

    <EditText
        android:id="@+id/patientPhoneNumberEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="전화번호"
        android:inputType="phone" />

    <EditText
        android:id="@+id/patientMedicationEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="복용 약물" />

    <EditText
        android:id="@+id/patientReferenceEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="참조 정보" />

    <!-- 성별 선택 라디오 그룹 -->
    <RadioGroup
        android:id="@+id/genderRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/genderMale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="남자"
            android:checked="true" />

        <RadioButton
            android:id="@+id/genderFemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="여자" />
    </RadioGroup>

    <!-- 구급대원 선택 Spinner -->
    <Spinner
        android:id="@+id/paramedicSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp" />

    <!-- 접수 완료 버튼 -->
    <Button
        android:id="@+id/submitReceptionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="접수 완료"
        android:layout_marginTop="16dp" />

</LinearLayout>
