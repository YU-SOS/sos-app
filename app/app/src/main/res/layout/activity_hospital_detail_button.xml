<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/bottom_sheet_hospital_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="병원 이름"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginBottom="8dp" />

    <ImageView
        android:id="@+id/bottom_sheet_hospital_image"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:scaleType="centerCrop"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/bottom_sheet_hospital_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="주소"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/bottom_sheet_hospital_categories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="카테고리"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/bottom_sheet_hospital_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전화번호" />
</LinearLayout>
