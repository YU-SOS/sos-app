<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterAmbulanceActivity">

  <!-- 구급대 이름 입력 -->

  <!-- 구급대 주소 입력 -->

  <ImageView
      android:id="@+id/imageView"
      android:layout_width="410dp"
      android:layout_height="362dp"
      android:layout_marginTop="16dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/image" />

  <EditText
      android:id="@+id/editTextAmbulanceName"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="336dp"
      android:hint="구급대 이름"
      android:inputType="text"
      android:padding="16dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <EditText
      android:id="@+id/editTextAmbulanceAddress"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:hint="구급대 주소"
      android:inputType="textPostalAddress"
      android:padding="16dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/editTextAmbulanceName" />

  <!-- 구급대 전화번호 입력 -->
  <EditText
      android:id="@+id/editTextAmbulancePhone"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:hint="구급대 전화번호"
      android:inputType="phone"
      android:padding="16dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/editTextAmbulanceAddress" />

  <!-- 제출 버튼 -->
  <Button
      android:id="@+id/buttonSubmit"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="30dp"
      android:backgroundTint="#FF2121"
      android:padding="12dp"
      android:text="회원가입"
      android:textColor="@android:color/white"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/editTextAmbulancePhone" />

  <!-- 로고 -->

</androidx.constraintlayout.widget.ConstraintLayout>
